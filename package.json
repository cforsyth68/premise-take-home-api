{
  "name": "premise-take-home-api",
  "version": "1.0.0",
  "description": "REST API for premise-take-home challenge",
  "main": "lib/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cforsyth68/premise-take-home-api.git"
  },
  "author": "Charles A. Forsyth",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/cforsyth68/premise-take-home-api/issues"
  },
  "homepage": "https://github.com/cforsyth68/premise-take-home-api#readme",
  "scripts": {
    "lint": "eslint lib --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist/*",
    "build": "npm run clean && babel lib -d dist",
    "start": "npm run build && nodemon dist/server.js",
    "serve": "npm run build && node dist/server.js",
    "test": "npm run lint:fix && jest"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": false,
    "quoteProps": "consistent",
    "endOfLine": "auto"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "bail": true,
    "rootDir": "tests",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageDirectory": "../coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0"
  },
  "dependencies": {
    "core-js": "^3.16.1",
    "fastify": "^3.20.2",
    "fastify-swagger": "^4.8.4",
    "make-promises-safe": "^5.1.0",
    "regenerator-runtime": "^0.13.9"
  }
}
